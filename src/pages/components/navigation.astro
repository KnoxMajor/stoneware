---
import BaseLayout from '../../layouts/BaseLayout.astro';
---

<BaseLayout title="Navigation">
  <h1>Navigation</h1>
  <p>Sidebar and navigation patterns.</p>

  <h2>Sidebar Navigation</h2>
  <div class="preview" style="background: var(--sw-bg-page);">
    <div style="width: 240px; background: var(--sw-bg-card); border-radius: 12px; padding: 20px; border: 1px solid var(--sw-border-default);">
      <div class="sidebar-logo">App Name</div>
      <nav>
        <a href="#" class="sw-list-item active">
          <svg xmlns="http://www.w3.org/2000/svg" width="18" height="18" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2"><path d="m3 9 9-7 9 7v11a2 2 0 0 1-2 2H5a2 2 0 0 1-2-2z"/><polyline points="9 22 9 12 15 12 15 22"/></svg>
          Dashboard
        </a>
        <a href="#" class="sw-list-item">
          <svg xmlns="http://www.w3.org/2000/svg" width="18" height="18" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2"><path d="M16 21v-2a4 4 0 0 0-4-4H6a4 4 0 0 0-4 4v2"/><circle cx="9" cy="7" r="4"/></svg>
          Users
        </a>
        <a href="#" class="sw-list-item">
          <svg xmlns="http://www.w3.org/2000/svg" width="18" height="18" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2"><rect width="7" height="9" x="3" y="3" rx="1"/><rect width="7" height="5" x="14" y="3" rx="1"/><rect width="7" height="9" x="14" y="12" rx="1"/><rect width="7" height="5" x="3" y="16" rx="1"/></svg>
          Projects
        </a>
        <a href="#" class="sw-list-item">
          <svg xmlns="http://www.w3.org/2000/svg" width="18" height="18" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2"><circle cx="12" cy="12" r="3"/><path d="M12 1v6m0 6v10"/></svg>
          Settings
        </a>
      </nav>
    </div>
  </div>

  <h2>Structure</h2>
  <pre><code set:html={`&lt;aside class="sidebar"&gt;
  &lt;div class="sidebar-logo"&gt;App Name&lt;/div&gt;
  &lt;nav&gt;
    &lt;a href="/dashboard" class="sw-list-item active"&gt;
      &lt;svg&gt;...&lt;/svg&gt;
      Dashboard
    &lt;/a&gt;
    &lt;a href="/users" class="sw-list-item"&gt;
      &lt;svg&gt;...&lt;/svg&gt;
      Users
    &lt;/a&gt;
  &lt;/nav&gt;
&lt;/aside&gt;`}></code></pre>

  <h2>CSS</h2>
  <pre><code set:html={`.sidebar {
  width: 260px;
  background: var(--sw-bg-card);
  border-right: 1px solid var(--sw-border-default);
  padding: var(--sw-space-6);
  height: 100vh;
  position: fixed;
}

.sidebar-logo {
  font-size: var(--sw-text-xl);
  font-weight: var(--sw-font-bold);
  margin-bottom: var(--sw-space-8);
}`}></code></pre>
</BaseLayout>
