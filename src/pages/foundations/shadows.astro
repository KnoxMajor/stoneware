---
import BaseLayout from '../../layouts/BaseLayout.astro';
---

<BaseLayout title="Shadows">
  <h1>Shadows</h1>
  <p>Use sparingly</p>

  <h2>Shadow Scale</h2>
  <div class="shadow-grid">
    <div class="shadow-demo" style="box-shadow: var(--sw-shadow-sm);">
      <span class="shadow-name">shadow-sm</span>
      <span class="shadow-use">Subtle, inputs</span>
    </div>
    <div class="shadow-demo" style="box-shadow: var(--sw-shadow-md);">
      <span class="shadow-name">shadow-md</span>
      <span class="shadow-use">Cards, dropdowns</span>
    </div>
    <div class="shadow-demo" style="box-shadow: var(--sw-shadow-lg);">
      <span class="shadow-name">shadow-lg</span>
      <span class="shadow-use">Modals, popovers</span>
    </div>
    <div class="shadow-demo" style="box-shadow: var(--sw-shadow-xl);">
      <span class="shadow-name">shadow-xl</span>
      <span class="shadow-use">Dramatic emphasis</span>
    </div>
  </div>

  <h2>Values</h2>
  <pre><code set:html={`--sw-shadow-sm: 0 1px 2px rgba(0, 0, 0, 0.05);
--sw-shadow-md: 0 1px 3px rgba(0, 0, 0, 0.05), 0 10px 25px rgba(0, 0, 0, 0.05);
--sw-shadow-lg: 0 8px 24px rgba(0, 0, 0, 0.12), 0 2px 6px rgba(0, 0, 0, 0.08);
--sw-shadow-xl: 0 20px 50px rgba(0, 0, 0, 0.2);`}></code></pre>

  <h2>Usage</h2>
  <pre><code set:html={`.my-card {
  box-shadow: var(--sw-shadow-md);
}

.my-modal {
  box-shadow: var(--sw-shadow-lg);
}`}></code></pre>
</BaseLayout>

<style>
  .shadow-grid {
    display: grid;
    grid-template-columns: repeat(2, 1fr);
    gap: 24px;
    margin-bottom: 32px;
  }
  .shadow-demo {
    background: white;
    border-radius: 12px;
    padding: 32px 24px;
    display: flex;
    flex-direction: column;
    align-items: center;
    gap: 8px;
  }
  .shadow-name {
    font-weight: 600;
    color: var(--sw-text-primary);
  }
  .shadow-use {
    font-size: 12px;
    color: var(--sw-text-muted);
  }
</style>
